  '--new-keyfiles=[New keyfiles]:key files' \
  '--new-password=[New password]:key files' \
  '--non-interactive[Do not interact with user]' \
  '-p[Password]' \
  '--protect-hidden=[Protect hidden volume]:protect hidden' \
  '--protection-keyfiles=[Keyfiles for protected hidden volume]:protection keyfiles' \
  '--protection-password=[Password for protected hidden volume]:protection passwd' \
  '--random-source=[Use file as source of random data]:random source' \
  '--restore-headers[Restore volume headers]' \
  '--save-preferences[Save user preferences]' \
  '--quick[Enable quick format]' \
  '--size=[Size in bytes]:sizes' \
  '--slot=[Volume slot number]:slots' \
  '--test[Test internal algorithms]' \
  '-t[Use text user interface]' \
  '--token-lib=[Security token library]:tokenz' \
  '-v[Enable verbose output]' \
  '--version[Display version information]' \
  '--volume-properties[Display volume properties]' \
